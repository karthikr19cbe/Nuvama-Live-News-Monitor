TELEGRAM_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_chat_id_here

# Exclude results/earnings headlines from Telegram alerts (true/false)
# Headlines are still saved to the dashboard, just not sent to Telegram
EXCLUDE_RESULTS_ALERTS=true

# Enable/disable Stockwatch feed (true/false)
ENABLE_STOCKWATCH=true

# Stockwatch company filter (both CSVs combined)
NIFTY500_CSV_PATH=nifty500_companies.csv
# Additional company list (leave empty to use only Nifty 500)
ADDITIONAL_CSV_PATH=additional_companies.csv

# Contextual dedup settings
ENABLE_EMBEDDING_DEDUP=false
EMBEDDING_MODEL_NAME=sentence-transformers/all-MiniLM-L6-v2
CONTEXTUAL_DEDUP_THRESHOLD=0.68
